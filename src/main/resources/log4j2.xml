<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%t/%logger{36}/%highlight{%level}]: %msg%n"
                           disableAnsi="false" noConsoleNoAnsi="false"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="Controller.MainController" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="chiloven.xamlsorter.Main" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
