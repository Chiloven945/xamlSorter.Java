<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="chiloven.xamlsorter.Controllers.ProgressDialogController">
    <content>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="messageLabel" wrapText="true"/>
            <ProgressBar fx:id="progressBar" prefWidth="300"/>
            <Button fx:id="cancelButton" text="Cancel"/>
        </VBox>
    </content>
</DialogPane>
